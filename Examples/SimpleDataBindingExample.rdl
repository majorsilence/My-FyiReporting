<?xml version="1.0" encoding="UTF-8"?>
<Report xmlns="http://schemas.microsoft.com/sqlserver/reporting/2005/01/reportdefinition" xmlns:rd="http://schemas.microsoft.com/SQLServer/reporting/reportdesigner">
  <Description>Simple example demonstrating data binding and looping through textboxes</Description>
  <Author>Majorsilence Reporting</Author>
  <PageHeight>11in</PageHeight>
  <PageWidth>8.5in</PageWidth>
  
  <!-- Data Source Definition -->
  <DataSources>
    <DataSource Name="DS1">
      <ConnectionProperties>
        <DataProvider>Microsoft.Data.Sqlite</DataProvider>
        <ConnectString>Data Source=../northwindEF.db</ConnectString>
      </ConnectionProperties>
    </DataSource>
  </DataSources>
  
  <!-- Data Set Definition -->
  <DataSets>
    <DataSet Name="Products">
      <Query>
        <DataSourceName>DS1</DataSourceName>
        <CommandText>SELECT ProductID, ProductName, UnitPrice, UnitsInStock FROM Products LIMIT 10</CommandText>
      </Query>
      <Fields>
        <Field Name="ProductID">
          <DataField>ProductID</DataField>
          <rd:TypeName>System.Int64</rd:TypeName>
        </Field>
        <Field Name="ProductName">
          <DataField>ProductName</DataField>
          <rd:TypeName>System.String</rd:TypeName>
        </Field>
        <Field Name="UnitPrice">
          <DataField>UnitPrice</DataField>
          <rd:TypeName>System.Decimal</rd:TypeName>
        </Field>
        <Field Name="UnitsInStock">
          <DataField>UnitsInStock</DataField>
          <rd:TypeName>System.Int64</rd:TypeName>
        </Field>
      </Fields>
    </DataSet>
  </DataSets>
  
  <Width>7.5in</Width>
  <TopMargin>.25in</TopMargin>
  <LeftMargin>.25in</LeftMargin>
  <RightMargin>.25in</RightMargin>
  <BottomMargin>.25in</BottomMargin>
  
  <!-- Page Header with Static Textbox -->
  <PageHeader>
    <Height>.5in</Height>
    <ReportItems>
      <Textbox Name="ReportTitle">
        <Top>.1in</Top>
        <Left>.1in</Left>
        <Width>7in</Width>
        <Height>.3in</Height>
        <Value>Product List - Data Binding Example</Value>
        <Style>
          <FontSize>16pt</FontSize>
          <FontWeight>Bold</FontWeight>
          <Color>Navy</Color>
        </Style>
      </Textbox>
    </ReportItems>
    <PrintOnFirstPage>true</PrintOnFirstPage>
    <PrintOnLastPage>true</PrintOnLastPage>
  </PageHeader>
  
  <!-- Report Body with Table -->
  <Body>
    <ReportItems>
      <!-- Table - This loops through each row in the dataset -->
      <Table Name="ProductsTable">
        <DataSetName>Products</DataSetName>
        <NoRows>No products found!</NoRows>
        <Style>
          <BorderStyle>
            <Default>Solid</Default>
          </BorderStyle>
        </Style>
        
        <!-- Define Column Widths -->
        <TableColumns>
          <TableColumn>
            <Width>1in</Width>
          </TableColumn>
          <TableColumn>
            <Width>3in</Width>
          </TableColumn>
          <TableColumn>
            <Width>1.5in</Width>
          </TableColumn>
          <TableColumn>
            <Width>1.5in</Width>
          </TableColumn>
        </TableColumns>
        
        <!-- Header Row (appears once) -->
        <Header>
          <TableRows>
            <TableRow>
              <Height>25pt</Height>
              <TableCells>
                <TableCell>
                  <ReportItems>
                    <Textbox Name="HeaderID">
                      <Value>ID</Value>
                      <Style>
                        <TextAlign>Center</TextAlign>
                        <BorderStyle>
                          <Default>Solid</Default>
                        </BorderStyle>
                        <BackgroundColor>LightGray</BackgroundColor>
                        <FontWeight>Bold</FontWeight>
                        <PaddingTop>5pt</PaddingTop>
                        <PaddingBottom>5pt</PaddingBottom>
                      </Style>
                    </Textbox>
                  </ReportItems>
                </TableCell>
                <TableCell>
                  <ReportItems>
                    <Textbox Name="HeaderName">
                      <Value>Product Name</Value>
                      <Style>
                        <TextAlign>Center</TextAlign>
                        <BorderStyle>
                          <Default>Solid</Default>
                        </BorderStyle>
                        <BackgroundColor>LightGray</BackgroundColor>
                        <FontWeight>Bold</FontWeight>
                        <PaddingTop>5pt</PaddingTop>
                        <PaddingBottom>5pt</PaddingBottom>
                      </Style>
                    </Textbox>
                  </ReportItems>
                </TableCell>
                <TableCell>
                  <ReportItems>
                    <Textbox Name="HeaderPrice">
                      <Value>Unit Price</Value>
                      <Style>
                        <TextAlign>Center</TextAlign>
                        <BorderStyle>
                          <Default>Solid</Default>
                        </BorderStyle>
                        <BackgroundColor>LightGray</BackgroundColor>
                        <FontWeight>Bold</FontWeight>
                        <PaddingTop>5pt</PaddingTop>
                        <PaddingBottom>5pt</PaddingBottom>
                      </Style>
                    </Textbox>
                  </ReportItems>
                </TableCell>
                <TableCell>
                  <ReportItems>
                    <Textbox Name="HeaderStock">
                      <Value>In Stock</Value>
                      <Style>
                        <TextAlign>Center</TextAlign>
                        <BorderStyle>
                          <Default>Solid</Default>
                        </BorderStyle>
                        <BackgroundColor>LightGray</BackgroundColor>
                        <FontWeight>Bold</FontWeight>
                        <PaddingTop>5pt</PaddingTop>
                        <PaddingBottom>5pt</PaddingBottom>
                      </Style>
                    </Textbox>
                  </ReportItems>
                </TableCell>
              </TableCells>
            </TableRow>
          </TableRows>
          <RepeatOnNewPage>true</RepeatOnNewPage>
        </Header>
        
        <!-- Details Section (repeats for EACH row in dataset) -->
        <!-- This is where the "looping" happens! -->
        <Details>
          <TableRows>
            <TableRow>
              <Height>20pt</Height>
              <TableCells>
                <!-- Textbox bound to ProductID field -->
                <TableCell>
                  <ReportItems>
                    <Textbox Name="ProductID">
                      <Value>=Fields!ProductID.Value</Value>
                      <Style>
                        <TextAlign>Center</TextAlign>
                        <BorderStyle>
                          <Default>Solid</Default>
                        </BorderStyle>
                        <PaddingLeft>5pt</PaddingLeft>
                        <PaddingRight>5pt</PaddingRight>
                        <PaddingTop>3pt</PaddingTop>
                        <PaddingBottom>3pt</PaddingBottom>
                      </Style>
                    </Textbox>
                  </ReportItems>
                </TableCell>
                
                <!-- Textbox bound to ProductName field -->
                <TableCell>
                  <ReportItems>
                    <Textbox Name="ProductName">
                      <Value>=Fields!ProductName.Value</Value>
                      <CanGrow>true</CanGrow>
                      <Style>
                        <BorderStyle>
                          <Default>Solid</Default>
                        </BorderStyle>
                        <PaddingLeft>5pt</PaddingLeft>
                        <PaddingRight>5pt</PaddingRight>
                        <PaddingTop>3pt</PaddingTop>
                        <PaddingBottom>3pt</PaddingBottom>
                      </Style>
                    </Textbox>
                  </ReportItems>
                </TableCell>
                
                <!-- Textbox bound to UnitPrice field with formatting -->
                <TableCell>
                  <ReportItems>
                    <Textbox Name="UnitPrice">
                      <Value>=Format(Fields!UnitPrice.Value, "C2")</Value>
                      <Style>
                        <TextAlign>Right</TextAlign>
                        <BorderStyle>
                          <Default>Solid</Default>
                        </BorderStyle>
                        <PaddingLeft>5pt</PaddingLeft>
                        <PaddingRight>5pt</PaddingRight>
                        <PaddingTop>3pt</PaddingTop>
                        <PaddingBottom>3pt</PaddingBottom>
                      </Style>
                    </Textbox>
                  </ReportItems>
                </TableCell>
                
                <!-- Textbox bound to UnitsInStock field -->
                <TableCell>
                  <ReportItems>
                    <Textbox Name="UnitsInStock">
                      <Value>=Fields!UnitsInStock.Value</Value>
                      <Style>
                        <TextAlign>Center</TextAlign>
                        <BorderStyle>
                          <Default>Solid</Default>
                        </BorderStyle>
                        <PaddingLeft>5pt</PaddingLeft>
                        <PaddingRight>5pt</PaddingRight>
                        <PaddingTop>3pt</PaddingTop>
                        <PaddingBottom>3pt</PaddingBottom>
                      </Style>
                    </Textbox>
                  </ReportItems>
                </TableCell>
              </TableCells>
            </TableRow>
          </TableRows>
        </Details>
      </Table>
    </ReportItems>
    <Height>3in</Height>
  </Body>
  
  <!-- Page Footer -->
  <PageFooter>
    <Height>0.5in</Height>
    <ReportItems>
      <Textbox Name="PageNumber">
        <Top>5pt</Top>
        <Left>10pt</Left>
        <Height>12pt</Height>
        <Width>3in</Width>
        <Value>=Globals!PageNumber + ' of ' + Globals!TotalPages</Value>
        <Style>
          <FontSize>9pt</FontSize>
          <Color>Gray</Color>
        </Style>
      </Textbox>
    </ReportItems>
    <PrintOnFirstPage>true</PrintOnFirstPage>
    <PrintOnLastPage>true</PrintOnLastPage>
  </PageFooter>
</Report>
